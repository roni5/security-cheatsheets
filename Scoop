Hide page title on node page

/**
 * Implements hook_preprocess_page().
 */
function MODULE_NAME_preprocess_page(&$vars) {
  if (arg(0) == 'node' && is_numeric(arg(1)) && !arg(2)) {
    if ($vars['node']->type == 'content_type_name') {
      $vars['title'] = '';
    }
  }
}

