Form API skeleton for Drupal

/**
 * Implements hook_menu()
 */
function mymodule_menu() {
  $items = array();

  $items['admin/config/../..'] = array(
    'title' => '',
    'type' => MENU_NORMAL_ITEM,
    'page callback' => 'drupal_get_form',
    'page arguments' => array('Ö_form'),
    'access arguments' => array('...'),  
  );

  return $items;
}

function Ö_form($form, &$form_state) {
  $form = array();

  $form['Ö'] = array(
    '#type' => 'fieldset',
    '#collapsible' => FALSE,
    '#title' => t('...'),
    '#description' => t('...'),
  );

  $form['Ö ']['Ö']  = array(
    '#type' => 'textfield',
    '#title' => t(''),
    '#description' => t('... !n Ö', array('!n' => )),
    '#default_value' => variable_get('', ),
    '#required' => TRUE
  );

    $form['Ö ']['Ö']  = array(
    '#title' => '...',
    '#description' => t(''),
    '#type' => 'select',
    '#options' => array(
      '...' => t('...'),
      '...' => t('...'),
    ),
    '#default_value' => variable_get('...', '...'),
  );

   $form['Ö']['Ö'] = array(
     '#type' => 'radios',
     '#required' => TRUE,
     '#default_value' => ...,
   );

  $form['Ö']['Ö']  = array(
     '#type' => 'item',
     '#markup' => t('..%item..', array('%item' =>  ..)),
   );

  return system_settings_form($form);
}

function Ö_form_validate($form, &$form_state) {

  if (...) {
     form_set_error('', t('')); 
  }  
}

