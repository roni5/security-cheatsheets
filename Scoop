April 27, 2013	
Restrict the site access through http password authentication in drupal

/**
* Implementation of hook_boot().
*
* Ask for user credentials and try to authenticate.
*/
function hook_boot() {
require_once DRUPAL_ROOT . ë/includes/password.incí;

if (isset($_SERVER[ëPHP_AUTH_USERí]) && isset($_SERVER[ëPHP_AUTH_PWí])) {
$query = ìSELECT pass FROM {users} WHERE name = :nameî;
$result = db_query($query, array(ë:nameí => $_SERVER[ëPHP_AUTH_USERí]));
$account = new stdClass();
foreach ($result as $row) {
$account->pass = $row->pass;
}
if (isset($account->pass)) {
if (user_check_password($_SERVER[ëPHP_AUTH_PWí], $account)) {
return;
}
}
}

header(ëWWW-Authenticate: Basic realm=îDevelopmentîë);
header(ëHTTP/1.0 401 Unauthorizedí);
exit;
}
